<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#895129"
                android:endColor="#2B1700"
                android:angle="270"
                />
            <stroke
                android:width="1dp"
                android:color="@color/black"
                />
            <corners
                android:radius="4dp"
                />
            <padding
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#492410"
                android:endColor="#1A0E00"
                android:angle="270"
                />
            <stroke
                android:width="1dp"
                android:color="@color/black"
                />
            <corners
                android:radius="4dp"
                />
            <padding
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
</selector>